# file: $(VFC)/class/cpp/Dbgl/Makefile
#

# define the object files
#
OBJ = dbgl_00.o dbgl_01.o dbgl_02.o

# define compilation, linking and archiving flags
#
#CFLAGS += -c -O2 -Wall
CFLAGS += -g
AR = gcc-ar rvs

# define dependencies
#
DEPS = Dbgl.h ./Makefile

# define include files
#
INCLUDES=-I/data/isip/tools/haswell/nfc/include/ -I/data/isip/tools/haswell/common/boost/current/include/

# define a dummy target
#
all: $(OBJ)

# define a target to make sure all source files are compiled
#
%.o: %.cc $(DEPS)
	g++ $(CFLAGS) $(INCLUDES) -o $@ $< 

# define a special target to install the code
#
install:
	cp Dbgl.h /data/isip/exp/tuh_eeg/exp_3023/include/
	$(AR) ../lib/libdsp.a $(OBJ)

# define a special target to clean the directory
#
clean:
	rm -f $(OBJ)

#
# end of file
